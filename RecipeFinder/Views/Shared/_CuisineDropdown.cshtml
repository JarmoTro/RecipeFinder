@model FormModel

@{
    String[] cuisines = {"All cuisines", "African", "American", "British", "Cajun", "Caribbean",
    "Chinese", "Eastern European", "European", "French", "German", "Greek", "Indian", "Irish", "Italian", "Japanese", "Jewish",
    "Korean", "Latin American", "Mediterranean", "Mexican", "Middle Eastern", "Nordic", "Southern", "Spanish", "Thai", "Vietnamese"};
}


<select asp-for="Cuisine" name="Cuisine" class="form-select m-3" aria-label="size 3 select example">
    @{
        foreach (String cuisine in cuisines)
        {
            <option value="@cuisine">@cuisine</option>
        }
    }
</select>